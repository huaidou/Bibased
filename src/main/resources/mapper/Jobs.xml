<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.edu.zzti.bibased.dao.mapper.JobsMapper">
    <sql id="returnFields">
        <![CDATA[
         select
            id,job_url,job_name,include,is_valid,create_time,op_time,last_ver
         FROM
            jobs
        ]]>
    </sql>

    <sql id="insertFields">
        <![CDATA[
         insert into jobs (id,job_url,job_name,include,is_valid,create_time,op_time,last_ver) values
        ]]>
    </sql>
    <insert id="batchInsert" parameterType="cn.edu.zzti.bibased.dto.Jobs">
        <include refid="insertFields" />
        <foreach collection="list" item="job" index="index" separator="," >
        (#{job.id},#{job.jobUrl},#{job.jobName},#{job.include},1,UNIX_TIMESTAMP(now()),UNIX_TIMESTAMP(now()),0)
      </foreach>
    </insert>

    <select id="insert" resultType="cn.edu.zzti.bibased.dto.Jobs">
        <include refid="insertFields" />
        <![CDATA[
       (#{job.id},#{job.jobUrl},#{job.jobName},#{job.include},1,UNIX_TIMESTAMP(now()),UNIX_TIMESTAMP(now()),0)
          ]]>
    </select>
</mapper>